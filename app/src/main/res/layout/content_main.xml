<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lemon95_main_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/lemon95_100px"
    android:paddingRight="@dimen/lemon95_100px"
    android:paddingTop="@dimen/lemon95_15px">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lemon95_162px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/lemon95_30px"
        android:layout_marginRight="@dimen/lemon95_30px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/lemon95_120px"
                android:layout_height="@dimen/lemon95_120px"
                android:src="@drawable/lemon_user_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lemon95_10px"
                android:text="@string/lemon95_login_msg"
                android:textColor="@color/lemon_color1"
                android:textSize="@dimen/lemon95_30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lemon_but_search"
                android:layout_width="@dimen/lemon95_240px"
                android:layout_height="@dimen/lemon95_60px"
                android:background="@drawable/lemon_bug_search_bg"
                android:drawablePadding="@dimen/lemon95_07px"
                android:drawableRight="@drawable/lemon_search"
                android:paddingLeft="@dimen/lemon95_30px"
                android:paddingRight="@dimen/lemon95_30px"
                android:text="@string/lemon95_search"
                android:textColor="@color/lemon_color2"
                android:textSize="@dimen/lemon95_30px" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lemon95_20px"
                android:fontFamily="sans-serif-light"
                android:format12Hour="hh:mm"
                android:format24Hour="HH:mm"
                android:textColor="@color/lemon_color2"
                android:textSize="@dimen/lemon95_30px"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lemon95_810px"
        android:orientation="vertical">


        <com.lemon95.androidtvwidget.view.OpenTabHost
            android:id="@+id/openTabHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/lemon95_60px"
            android:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lemon95_108px"
        android:layout_marginRight="@dimen/lemon95_30px">

        <ImageView
            android:layout_width="@dimen/lemon95_164px"
            android:layout_height="@dimen/lemon95_56px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/lemon_logo" />

    </RelativeLayout>

</LinearLayout>
